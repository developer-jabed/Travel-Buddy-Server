model Trip {
  id            String       @id @default(uuid())
  userId        String
  title         String
  destination   String
  startDate     DateTime
  endDate       DateTime
  budget        Int?
  description   String?
  tripStatus    TripStatus   @default(UPCOMING)

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  user          User         @relation(fields: [userId], references: [id])
  buddyRequests BuddyRequest[]
  meetups       Meetup[]

  @@map("trips")
}
