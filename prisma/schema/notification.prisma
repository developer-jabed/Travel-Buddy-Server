model Notification {
  id      String           @id @default(uuid())
  userId  String
  type    NotificationType
  message String
  isRead  Boolean          @default(false)
  link    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("notifications")
}
