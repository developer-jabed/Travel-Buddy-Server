{
  "info": {
    "name": "AdminRoutes",
    "_postman_id": "f6d3d7b1-1234-4c56-9876-abcdef123456",
    "description": "Postman collection for AdminRoutes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Admins",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{base_url}}/admins",
          "host": ["{{base_url}}"],
          "path": ["admins"]
        }
      }
    },
    {
      "name": "Get Admin by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{base_url}}/admins/{{admin_id}}",
          "host": ["{{base_url}}"],
          "path": ["admins", "{{admin_id}}"]
        }
      }
    },
    {
      "name": "Update Admin",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Admin Name\",\n  \"permissions\": [\"READ\", \"WRITE\"],\n  \"superAdmin\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/admins/{{admin_id}}",
          "host": ["{{base_url}}"],
          "path": ["admins", "{{admin_id}}"]
        }
      }
    },
    {
      "name": "Delete Admin",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{base_url}}/admins/{{admin_id}}",
          "host": ["{{base_url}}"],
          "path": ["admins", "{{admin_id}}"]
        }
      }
    },
    {
      "name": "Soft Delete Admin",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{base_url}}/admins/soft/{{admin_id}}",
          "host": ["{{base_url}}"],
          "path": ["admins", "soft", "{{admin_id}}"]
        }
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "admin_token", "value": "YOUR_ADMIN_JWT_TOKEN" },
    { "key": "admin_id", "value": "ADMIN_ID_HERE" }
  ]
}
